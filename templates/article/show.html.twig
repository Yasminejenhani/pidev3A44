{% extends 'baseback.html.twig' %}

{% block title %}Article{% endblock %}

{% block content1 %}
    <h1>Article</h1>
<center>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Author_name</th>
                <td>{{ article.authorname }}</td>
            </tr>
            <tr>
                <th>Date pub</th>
                <td>{{ article.datepub ? article.datePub|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ article.image }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_article_index') }}">back to list</a>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}
    </center>
{% endblock %}

